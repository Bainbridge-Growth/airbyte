{
  "documentationUrl": "https://docs.airbyte.com/integrations/sources/quickbooks",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Quickbooks Drivepoint Spec",
    "type": "object",
    "required": ["credentials", "realm_id"],
    "additionalProperties": true,
    "properties": {
      "credentials": {
        "order": 0,
        "title": "Authenticate via OAuth 2.0",
        "type": "object",
        "required": ["client_id", "client_secret", "refresh_token"],
        "additionalProperties": true,
        "properties": {
          "client_id": {
            "title": "Client ID",
            "type": "string",
            "description": "The Client ID of your developer application",
            "airbyte_secret": true
          },
          "client_secret": {
            "title": "Client Secret",
            "type": "string",
            "description": "The client secret of your developer application",
            "airbyte_secret": true
          },
          "refresh_token": {
            "title": "Refresh Token",
            "type": "string",
            "description": "A refresh token generated using the above client ID and secret",
            "airbyte_secret": true
          }
        }
      },
      "realm_id": {
        "order": 1,
        "title": "Realm ID",
        "type": "string",
        "description": "The Realm ID of the QuickBooks company you want to access",
        "airbyte_secret": false
      },
      "start_date": {
        "order": 2,
        "type": "string",
        "title": "Start Date",
        "description": "The start date of the report, in the format YYYY-MM-DD. start_date must be less than end_date.",
        "examples": ["2025-01-14"],
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
        "format": "date"
      },
      "end_date": {
        "order": 3,
        "type": "string",
        "title": "End Date",
        "description": "The end date of the report, in the format YYYY-MM-DD. start_date must be less than end_date.",
        "examples": ["2025-05-21"],
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
        "format": "date"
      },
      "accounting_method_selector": {
        "order": 4,
        "title": "Accounting Method",
        "description": "The accounting method used to generate the report. This can be either Accrual or Cash. If not specified, the default is Accrual.",
        "type": "object",
        "display_type": "radio",
        "oneOf": [
          {
            "title": "Accrual",
            "required": ["selected_method"],
            "properties": {
              "selected_method": {
                "type": "string",
                "const": "Accrual",
                "order": 0
              }
            }
          },
          {
            "title": "Cash",
            "required": ["selected_method"],
            "properties": {
              "selected_method": {
                "type": "string",
                "const": "Cash",
                "order": 1
              }
            }
          }
        ]
      },
      "summarize_column_by_selector": {
        "order": 5,
        "title": "Summarize Column By",
        "description": "The criteria by which to group the report results.",
        "type": "object",
        "display_type": "radio",
        "oneOf": [
          {
            "title": "Departments",
            "required": [
              "selected_column"
            ],
            "properties": {
              "selected_column": {
                "type": "string",
                "const": "Departments",
                "order": 0
              }
            }
          },
          {
            "title": "Classes",
            "required": [
              "selected_column"
            ],
            "properties": {
              "selected_column": {
                "type": "string",
                "const": "Classes",
                "order": 1
              }
            }
          },
          {
            "title": "Customers",
            "required": [
              "selected_column"
            ],
            "properties": {
              "selected_column": {
                "type": "string",
                "const": "Customers",
                "order": 2
              }
            }
          },
          {
            "title": "Vendors",
            "required": [
              "selected_column"
            ],
            "properties": {
              "selected_column": {
                "type": "string",
                "const": "Vendors",
                "order": 3
              }
            }
          }
        ]
      }
    }
  }
}
